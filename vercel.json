{
  "version": 2,
  "builds": [
    {
      "src": "s3gentech_project/wsgi.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "15mb", "runtime": "python3.9" }
    },
    {
      "src": "build_files.sh",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "staticfiles_build"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/img/(.*)", // Updated to match "/static/img/"
      "dest": "/staticfiles_build/static/$1" // Updated to point to the correct directory
    },
    {
      "src": "/(.*)",
      "dest": "s3gentech_project/wsgi.py"
    }
  ]
}
